<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="Matteo.Views.MainWindow"
        Title="Matteo - LÃ¦r gangetabellen!"
        WindowState="FullScreen"
        Background="Black"
        SystemDecorations="None">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Header -->
    <StackPanel Grid.Row="0" Margin="20">
      <TextBlock Text="Matteo - LÃ¦r gangetabellen!"
                FontSize="32"
                FontWeight="Bold"
                HorizontalAlignment="Center"
                Foreground="White"/>
      <TextBlock Text="LÃ¸s mattestykkene for Ã¥ komme tilbake til datamaskinen!"
                FontSize="18"
                HorizontalAlignment="Center"
                Foreground="White"/>
    </StackPanel>

    <!-- Main Content -->
    <Grid Grid.Row="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>

      <!-- Math Problem -->
      <StackPanel Grid.Column="0" 
                  VerticalAlignment="Center" 
                  HorizontalAlignment="Center">
        <TextBlock x:Name="ProblemText" 
                   Text="1 Ã— 1 = ?"
                   FontSize="48"
                   Foreground="White"
                   HorizontalAlignment="Center">
          <TextBlock.Transitions>
            <Transitions>
              <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2"/>
              <BrushTransition Property="Foreground" Duration="0:0:0.2"/>
            </Transitions>
          </TextBlock.Transitions>
        </TextBlock>
        
        <TextBox x:Name="AnswerInput"
                 Width="200"
                 Margin="0,20,0,0"
                 Watermark="Skriv svaret her"
                 FontSize="24"
                 HorizontalContentAlignment="Center"/>
      </StackPanel>

      <!-- Progress and Stats -->
      <StackPanel Grid.Column="1" 
                  VerticalAlignment="Center" 
                  HorizontalAlignment="Center">
        <TextBlock Text="Din fremgang:"
                   FontSize="24"
                   Foreground="White"/>
        
        <ProgressBar x:Name="ProgressBar"
                     Value="0"
                     Maximum="10"
                     Height="20"
                     Width="300"
                     Margin="0,10,0,0"/>
        
        <TextBlock x:Name="ScoreText"
                   Text="Poeng: 0"
                   FontSize="20"
                   Foreground="White"
                   Margin="0,20,0,0"/>
        
        <TextBlock x:Name="TimeText"
                   Text="Tid igjen: 30 min"
                   FontSize="20"
                   Foreground="White"
                   Margin="0,10,0,0"/>
      </StackPanel>
    </Grid>

    <!-- Footer -->
    <StackPanel Grid.Row="2" Margin="20">
      <Button x:Name="SubmitButton"
              Content="Sjekk svar"
              HorizontalAlignment="Center"
              Classes="accent"
              Click="SubmitButton_Click"/>
    </StackPanel>

    <!-- Victory Text (Hidden by default) -->
    <TextBlock x:Name="VictoryText"
               Text="Gratulerer! ðŸŽ‰"
               FontSize="48"
               FontWeight="Bold"
               Foreground="Lime"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               IsVisible="False">
      <TextBlock.Transitions>
        <Transitions>
          <DoubleTransition Property="Opacity" Duration="0:0:1"/>
          <TransformOperationsTransition Property="RenderTransform" Duration="0:0:1"/>
        </Transitions>
      </TextBlock.Transitions>
    </TextBlock>

    <!-- Background Canvas -->
    <Canvas x:Name="BackgroundCanvas" IsHitTestVisible="False">
      <Canvas.Background>
        <SolidColorBrush Color="Black"/>
      </Canvas.Background>
    </Canvas>
  </Grid>
</Window>
