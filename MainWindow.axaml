<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:Matteo.Controls"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Matteo.Views.MainWindow"
        Title="Matteo"
        WindowState="Maximized"
        Background="#1a1a1a">
    
    <Grid>
        <!-- Animated Background -->
        <Canvas x:Name="BackgroundCanvas" Background="#1a1a1a">
            <!-- Background elements will be added programmatically -->
        </Canvas>

        <!-- Game Elements Canvas -->
        <Canvas x:Name="GameCanvas">
            <!-- Enemies and effects will be added here programmatically -->
        </Canvas>

        <!-- Main Game Area -->
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Top Bar with Score and Time -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock x:Name="ScoreText" 
                         Text="Poeng: 0" 
                         FontSize="24" 
                         Foreground="White"
                         VerticalAlignment="Center"/>
                
                <TextBlock x:Name="TimeText" 
                         Text="Tid igjen: 30 min 0 sek" 
                         FontSize="24" 
                         Foreground="White"
                         Grid.Column="1"
                         VerticalAlignment="Center"/>
            </Grid>

            <!-- Progress Bar -->
            <ProgressBar x:Name="ProgressBar" 
                        Grid.Row="0"
                        Maximum="10" 
                        Value="0"
                        Height="20"
                        Margin="0,50,0,0"
                        Background="#333333"
                        Foreground="#4CAF50">
                <ProgressBar.Styles>
                    <Style Selector="ProgressBar">
                        <Setter Property="Template">
                            <ControlTemplate>
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="10">
                                    <Grid>
                                        <Border Name="PART_Indicator"
                                                Background="{TemplateBinding Foreground}"
                                                BorderThickness="0"
                                                CornerRadius="10"
                                                HorizontalAlignment="Left"/>
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </Setter>
                    </Style>
                </ProgressBar.Styles>
            </ProgressBar>

            <!-- Center Game Area -->
            <Grid Grid.Row="1" VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Math Problem -->
                <TextBlock x:Name="ProblemText" 
                         Text="3 Ã— 4 = ?" 
                         FontSize="72" 
                         Foreground="White"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Margin="0,0,0,20"/>

                <!-- Answer Input -->
                <TextBox x:Name="AnswerInput" 
                         Grid.Row="1"
                         Width="200" 
                         Height="50"
                         FontSize="24"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Margin="0,0,0,20"
                         Background="#333333"
                         BorderBrush="#4CAF50"
                         BorderThickness="2"
                         CornerRadius="5"
                         TextAlignment="Center"/>

                <!-- Submit Button -->
                <Button x:Name="SubmitButton" 
                        Grid.Row="2"
                        Content="Svar" 
                        Width="200" 
                        Height="50"
                        FontSize="24"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        CornerRadius="5"/>
            </Grid>

            <!-- Victory Text -->
            <TextBlock x:Name="VictoryText" 
                      Text="Gratulerer! ðŸŽ‰" 
                      FontSize="72" 
                      Foreground="#4CAF50"
                      Grid.Row="1"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      IsVisible="False"
                      Opacity="0">
                <TextBlock.RenderTransform>
                    <ScaleTransform ScaleX="0" ScaleY="0"/>
                </TextBlock.RenderTransform>
            </TextBlock>

            <!-- Motivator Pig -->
            <controls:MotivatorPig x:Name="Motivator"
                                  Grid.Row="1"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Bottom"
                                  Margin="20,0,0,20"/>
        </Grid>
    </Grid>
</Window>
