<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Matteo.Controls.MessageOverlay">
    <Grid x:Name="OverlayGrid" 
          Background="#80000000" 
          IsVisible="False">
        <!-- Shadow border -->
        <Border Background="#40000000"
                CornerRadius="10"
                Margin="5,5,0,0">
            <Border Background="#1a1a1a"
                    BorderBrush="#4CAF50"
                    BorderThickness="2"
                    CornerRadius="10"
                    MaxWidth="400"
                    Margin="-5,-5,5,5"
                    Padding="20">
                <StackPanel Spacing="20">
                    <TextBlock x:Name="TitleText"
                             FontSize="24"
                             Foreground="White"
                             HorizontalAlignment="Center"
                             TextWrapping="Wrap"/>
                    
                    <TextBlock x:Name="MessageText"
                             FontSize="18"
                             Foreground="White"
                             HorizontalAlignment="Center"
                             TextAlignment="Center"
                             TextWrapping="Wrap"/>
                    
                    <Button x:Name="OkButton"
                            Content="OK"
                            HorizontalAlignment="Center"
                            Width="100"
                            Height="40"
                            Background="#4CAF50"
                            Foreground="White"
                            BorderThickness="0"
                            CornerRadius="5"/>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</UserControl> 